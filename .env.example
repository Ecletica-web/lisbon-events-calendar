# Lisbon Events Calendar - Environment Variables
# Copy to .env.local and fill in values

# Events data (CSV URLs)
NEXT_PUBLIC_EVENTS_CSV_URL=
NEXT_PUBLIC_VENUES_CSV_URL=
NEXT_PUBLIC_EVENT_TAGS_CSV_URL=
NEXT_PUBLIC_VENUE_TAGS_CSV_URL=
NEXT_PUBLIC_PROMOTERS_CSV_URL=

# Feature flags
NEXT_PUBLIC_ENABLE_PROFILE=true
NEXT_PUBLIC_ENABLE_PERSONAS=true
NEXT_PUBLIC_ENABLE_SHARED_VIEWS=true

# Supabase (optional - enables real auth + user actions)
# When set, signup/login use Supabase Auth (email + Google + Facebook); follow/wishlist/like persist to Supabase
# Configure Google/Facebook OAuth in Supabase Dashboard → Authentication → Providers
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Optional: for server-side admin operations
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
